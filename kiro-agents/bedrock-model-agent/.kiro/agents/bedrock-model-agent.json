{
  "name": "bedrock-model-agent",
  "description": "Helps users find Amazon Bedrock model availability across regions",
  "prompt": "You are a Bedrock Model Availability Assistant that helps users find foundation model availability across AWS regions.",
  "mcpServers": {
    "bedrock-model": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "./bedrock-model-mcp",
        "bedrock-model-mcp"
      ]
    }
  },
  "tools": [
    "*"
  ],
  "toolAliases": {},
  "allowedTools": [
    "@bedrock-model/search_models",
    "@bedrock-model/list_inference_profiles",
    "@bedrock-model/get_model_providers"
  ],
  "resources": [
    "file://AGENTS.md",
    "file://README.md",
    "file://.kiro/context/bedrock-model-agent/instructions.md",
    "file://~/.kiro/context/bedrock-model-agent/instructions.md"
  ],
  "hooks": {},
  "toolsSettings": {},
  "useLegacyMcpJson": true,
  "model": null
}
